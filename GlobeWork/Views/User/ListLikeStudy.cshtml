@model GlobeWork.ViewModel.UserLikeViewModel
@using PagedList.Mvc
@using GlobeWork.Utils
@{
    ViewBag.Title = "Tin du học đã lưu";
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("ListLikeStudy");
}
<div class="container">
    <div class="row py-3">
        <div class="col-xl-8 order-xl-0 order-1">
            <div class="recruitment bg-white shadow">
                @if (Model.Likes.Any())
                {
                    foreach (var item in Model.Likes)
                    {
                        <div class="job bg-white detail-job">
                            <div class="media ">
                                <div>
                                    <a href="@Url.Action("StudyAbroadDetail","Home", new {url = item.StudyAbroad.Url})" class="job-name custom-w" data-tooltip="@item.StudyAbroad.Name" data-tooltip-position="top">@item.StudyAbroad.Name</a>
                                    <div class="company-name">
                                        @item.StudyAbroad.Company.Name
                                    </div>
                                </div>
                                <div class="media-body time-deadline text-right">
                                    @if (item.StudyAbroad.ExpirationDate != null)
                                    {
                                        if (item.StudyAbroad.ExpirationDate > DateTime.Now)
                                        {
                                            @:Còn <strong>@Utils.DateCountDown(item.StudyAbroad.ExpirationDate)</strong> để ứng tuyển
                                        }
                                        else
                                        {
                                            @:Hết thời gian ứng tuyển
                                        }
                                    }
                                    else
                                    {
                                        @:Luôn tuyển
                                    }
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-1">
                                <div class="w-75">
                                    <span class="info-job price">@Html.DisplayFor(a => item.StudyAbroad.WageScholarship)</span>
                                    <span class="info-job">
                                        @if (item.StudyAbroad.Cities.Any())
                                        {
                                            if (item.StudyAbroad.Cities.Count > 1)
                                            {

                                                <span data-tooltip="@string.Join(" , ", item.StudyAbroad.Cities.Select(city => city.Name))" data-tooltip-position="top">
                                                    @item.StudyAbroad.Cities.Count Thành phố
                                                </span>
                                            }
                                            else
                                            {
                                                foreach (var city in item.StudyAbroad.Cities.Take(1))
                                                {
                                                    <span data-tooltip="@city.Name" data-tooltip-position="top">
                                                        @city.Name
                                                    </span>
                                                }
                                            }
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                    if (Model.Likes.PageCount > 1)
                    {
                        <div class="text-center">
                            @Html.PagedListPager(Model.Likes, page => Url.Action("ListLikeStudy", new { page }))
                        </div>
                    }
                }
                else
                {
                    <div class="none-suitable-job__content mt-3 shadow-none">
                        <img src="https://static.topcv.vn/v4/image/job-list/none-result.png" alt="None suitable job">
                        <span>Bạn chưa lưu tin nào</span>
                    </div>
                }
            </div>
        </div>
        <div class="col-xl-4 d-xl-block d-none">
            <div class="info-box bg-white shadow rounded">
                <div class="media">
                    @if (Model.User.Avatar != null)
                    {
                        <img src="@Path.Combine("/images/user/", Model.User.Avatar)" alt="@Model.User.FullName" class="right-avatar" />
                    }
                    else
                    {
                        <img src="~/Content/images/avatar-default.jpg" alt="@Model.User.FullName" class="right-avatar" />
                    }
                    <div class="media-body ml-2">
                        <span>Chào bạn trở lại</span>
                        <div class="name-user">
                            @Model.User.FullName
                        </div>
                        <div class="account-type vip mt-2">
                            Tài khoản đã xác thực
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
