                                <option>
                                    lựa chọn @i
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-6">
                        <label>
                            Ngành nghề <i class="text-danger">*</i>
                        </label>
                        <select class="v-select-multiple">
                            @for (int i = 0; i < 10; i++)
                            {
                                <option value="@i">
                                    lựa chọn @i
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label>
                            Hạn nhận hồ sơ <i class="text-danger">*</i>
                        </label>
                        <input type="date" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label>
                            Số lượng <i class="text-danger">*</i>
