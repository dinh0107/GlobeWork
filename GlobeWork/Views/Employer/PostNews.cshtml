                    </label>
                    <input class="form-control" />
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label>
                            Vị trí tuyển dụng <i class="text-danger">*</i>
                        </label>
                        <select class="v-select">
                            @for (int i = 0; i < 10; i++)
