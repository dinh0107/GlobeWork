@{
    var FullName = ViewContext.RouteData.Values["FullName"].ToString();
    var id = ViewContext.RouteData.Values["Id"].ToString();
    var avatar = ViewContext.RouteData.Values["Avatar"].ToString();
    var email = ViewContext.RouteData.Values["Email"].ToString();
}
<div class="sidebar">
    <div class="media user-sidebar">
        <div class="w-show">
            @if (avatar == "")
            {
                <img src="~/Content/images/avatar-default.jpg" alt="@FullName" />
            }
            else
            {
                <img src="@Path.Combine("/images/employer/", avatar)" alt="@FullName" />
            }
        </div>
        <div class="w-hidden media-body">
            <h5 class="mt-0">@FullName</h5>
            <p>Nhà tuyển dụng</p>
        </div>
    </div>
    <div class="vw"></div>
    <ul class="nav-sidebar">
        <li>
            <a href="@Url.Action("Index", "Employer")">
                <div class="w-show">
                    <i class="fa-regular fa-chart-line"></i>
                </div>
                <div class="w-hidden">
                    Tổng quan
                </div>
            </a>
        </li>
        <li>
            <a href="@Url.Action("ListNews", "Employer")">
                <div class="w-show">
                    <i class="fa-regular fa-file-invoice"></i>
                </div>
                <div class="w-hidden">
                    Tin tuyển dụng
                </div>
            </a>
        </li>
    </ul>
    <div class="vw"></div>
    <ul class="nav-sidebar">
        <li>
            <a href="@Url.Action("History", "Employer")">
                <div class="w-show">
                    <i class="fa-regular fa-clock-rotate-left"></i>
                </div>
                <div class="w-hidden">
                    Lịch sử hoạt động
                </div>
            </a>
        </li>
        <li>
            <a href="@Url.Action("Profile", "Employer")">
                <div class="w-show">
                    <i class="fa-regular fa-gear"></i>
                </div>
                <div class="w-hidden">
                    Cài đặt tài khoản
                </div>
            </a>
        </li>
    </ul>
</div>