                            }
                        </li>
                        if (Model.StudyAbroadCategories.Any(a => a.ParentId == item.Id))
                        {
                            <li class="study-repon">
                                <ul class="ul-reset">
                                    @foreach (var child in Model.StudyAbroadCategories.Where(a => a.ParentId == item.Id))
                                    {
                                        <li class="mb-0">
