        <small class="my-2 d-block">Dành cho nhà tuyển dụng</small>
        <ul class="ul-reset ul-repon">
            <li>
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("EmployerLogin", "Employer")" class="link-repon">Đăng tuyển</a>
                </div>
            </li>
        </ul>
    </div>
