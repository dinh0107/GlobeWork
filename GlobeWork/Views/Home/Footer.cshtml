@model GlobeWork.ViewModel.FooterViewModel
@using GlobeWork.Models
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    var FullName = ViewContext.RouteData.Values["FullName"].ToString();
    var id = Convert.ToInt32(ViewContext.RouteData.Values["Id"]);
    var avatar = ViewContext.RouteData.Values["Avatar"].ToString();
    var url = ViewContext.RouteData.Values["Url"].ToString();
    var email = ViewContext.RouteData.Values["Email"].ToString();
}
<footer>
    <div class="container">
        <div class="row">
            <div class="col-xl-3">
                <div class="content-detail">
                    @Html.Raw(config.InfoFooter)
                </div>
                <div class="footer-title mt-3">
                    Cộng đồng GlobeWork
                </div>
                <ul class="ul-reset ul-social">
                    <li><a href="@config.Facebook" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="@config.Twitter" target="_blank"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="@config.Instagram" target="_blank"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="@config.Youtube" target="_blank"><i class="fab fa-youtube"></i></a></li>
                </ul>
                <a href="">
                    <img src="~/Content/images/bct.png" alt="Bộ công thương" class="bct" />
                </a>
            </div>
            <div class="col-xl-9">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="footer-title mt-3">
                            Về GlobeWork
                            <i class="fa-light fa-chevron-down d-lg-none d-block"></i>
                        </div>
                        <ul class="ul-reset menu-footer">
                            @foreach (var item in Model.Articles)
                            {
                                <li><a href="@Url.Action("ArticleDetail", new {url = item.Url})">@item.Subject</a></li>
                            }
                        </ul>
                    </div>
                    <div class="col-lg-3 ">
                        <div class="footer-title mt-3">
                            Việc làm
                            <i class="fa-light fa-chevron-down d-lg-none d-block"></i>
                        </div>
                        <ul class="ul-reset menu-footer">
                            @foreach (var item in Model.Careers)
                            {
                                <li><a href="@Url.Action("JobCategory" ,"Home", new {url = item.Code})">@item.Name</a></li>
                            }
                        </ul>
                    </div>
                    <div class="col-lg-3">
                        <div class="footer-title mt-3">
                            Du học
                            <i class="fa-light fa-chevron-down d-lg-none d-block"></i>
                        </div>
                        <ul class="ul-reset menu-footer">
                            @foreach (var item in Model.Countries)
                            {
                                <li><a href="@Url.Action("CountruyStudy", new {id = item.Id})">Du học @item.Name</a></li>
                            }
                        </ul>
                    </div>
                    <div class="col-lg-3">
                        @*<div class="footer-title mt-3">
                            Hồ sơ và CV
                        </div>
                        <ul class="ul-reset menu-footer">
                            <li><a href="#">Mẫu CV</a></li>
                            <li><a href="#">Tư vấn Mẹo viết CV</a></li>
                            <li><a href="#">Tạo CV</a></li>
                        </ul>*@
                        <div class="footer-title mt-3">
                            Đối tác
                            <i class="fa-light fa-chevron-down d-lg-none d-block"></i>
                        </div>
                        <ul class="ul-reset menu-footer">
                            @foreach (var item in Model.Parters)
                            {
                                <li><a href="@item.Url" target="_blank">@item.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<div class="modal fade bd-example-modal-lg" id="qick-form" tabindex="-1" role="dialog" aria-labelledby="qick-form" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header qick-action pl-5 mb-2 align-items-center">
                <ul class="nav nav-pills " id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active pl-0" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Đăng nhập</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Đăng ký</a>
                    </li>
                </ul>
                <button type="button" class="close mr-2" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <div class="tab-content px-5 pb-4" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        @Html.Action("QickLogin")
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        @Html.Action("QickRegister")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
