@model GlobeWork.ViewModel.ApplyViewModel
<div class="form-group">
    <label class="job-name">
        <i class="fa-solid fa-folder-user text-success"></i>
        Chọn CV để ứng tuyển
    </label>
    <div class="form-group">
        <label for="type-1" class="custom-cv">
            <input type="radio" name="Type" checked id="type-1" value="0" />
            <span>Sử dụng trang cá nhân</span>
        </label>
    </div>
    <div class="form-group">
        <label for="type-2" class="upload-cv custom-cv">
            <input type="radio" name="Type" id="type-2" value="1" />
            <span>Tải lên Cv từ máy tính</span>
        </label>
        <label class="drop_box" for="fileID">
            <p id="selectedFileName">Tải lên CV từ máy tính của bạn</p>
            <input type="file" name="ApplyJob.FileUpload" hidden accept=".doc,.docx,.pdf" id="fileID" style="display:none;" onchange="updateFileName(this)">
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.ApplyJob.Body)
        @Html.TextAreaFor(a => a.ApplyJob.Body, new { @class = "form-control text-cv", @placeholder = "Viết giới thiệu ngắn gọn về bản thân (điểm mạnh, điểm yếu) và nêu rõ mong muốn, lý do bạn muốn ứng tuyển cho vị trí này." })
    </div>
</div>
@Scripts.Render("~/bundles/jqueryval")