        function uploadImage(input , type) {
            if (input.files && input.files[0]) {
                var formData = new FormData();
                formData.append('image', input.files[0]);
                formData.append('type', type);
                $.ajax({
                    type: "POST",
                    url: "/User/ChangImage",
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function (response) {
                        type = parseInt(type);
