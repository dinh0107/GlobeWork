            var to = "aaaaaaaaaaaaaaaaaeeeeeeeeeeeiiiiiooooooooooooooooouuuuuuuuuuuyyyyyd";
            for (var i = 0, l = from.length; i < l; i++) {
                text = text.replace(new RegExp(from.charAt(i), 'g'), to.charAt(i));
