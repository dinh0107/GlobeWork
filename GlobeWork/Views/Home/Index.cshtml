@model GlobeWork.ViewModel.HomeViewModel
@using GlobeWork.Models;
@using System.ComponentModel.DataAnnotations
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    ViewBag.Title = config.Title;
    ViewBag.Description = config.Description;
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("Index", "Home");
}
<section class="banner">
    <div class="list-banner">
        <div class="thuml-baner">
            <img src="~/Content/images/banner.jpg" alt="Alternate Text" class="lazyload" />
        </div>
    </div>
    <div class="content-banner">
        <div class="container center-item">
            <div class="slogan">
                Tìm công việc mơ ước của bạn.
                <br />
                Thăng tiến ngay hôm nay
            </div>
            <div class="sub-slogan">
                Công việc của chúng tôi được cập nhật hàng giờ với hàng trăm vị trí việc làm mới, có thể bạn sẽ quan tâm
            </div>
            <div class="filter-banner">
                <form class="filter-parent">
                    <div class="filter-banner_1">
                        <input type="text" name="name" placeholder="Nhập từ khóa" class="form-control" />
                    </div>
                    <div class="filter-banner_2">
                        <div class="form-control d-flex align-items-center justify-content-between">
                            <input type="text" name="name" value="" placeholder="Khu vực" class="border-0 form-control ouline-none" />
                            <i class="far fa-location"></i>
                        </div>
                    </div>
                    <div class="filter-banner_3">
                        <select class="form-control">
                            <option value="">Ngành nghề</option>
                        </select>
                    </div>
                    <div class="filter-banner_4">
                        <button type="submit" class="btn btn-block filter-btn">
                            <i class="far fa-search"></i>
                            TÌM KIẾM
                        </button>
                    </div>
                </form>
                <div class="hot-keyword">
                    <span>Từ Khóa Thịnh Hành:</span>
                    <div class="list-keyword">
                        @for (var i = 0; i < 6; i++)
                        {
                            <a href="#">LẬP TRÌNH VIÊN</a>
                        }
                    </div>
                    <a href="#" class="setting-filter"><i class="far fa-cog mr-1"></i>Tìm kiếm nâng cao</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="bg-light py-4">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <h2 class="title">
                Việc làm tốt nhất
            </h2>
            <a href="" class="view-all">Xem tất cả</a>
        </div>
        <div class="d-flex align-items-center justify-content-between mt-3">
            <div class="sort-contruy w-25 form-control border">
                <span>
                    <i class="fa-solid fa-bars-filter"></i>
                    Lọc theo :
                </span>
                <select class="form-control ouline-none filter-select">
                    <option value="1">Địa điểm</option>
                    <option value="2">Mức lương</option>
                    <option value="3">Kinh nghiệm</option>
                    <option value="4">Ngành nghề</option>
                </select>
            </div>
            @Html.Action("GetFilter")
        </div>
        <div id="filter">
            @Html.Action("GetJob")
        </div>
    </div>
</section>
<div class="container">
    <div class="py-4">
        <h2 class="title">
            Top ngành nghề nổi bật
        </h2>
        <div class="title-sub">
            Bạn muốn tìm việc mới? Xem danh sách việc làm <a href="#">tại đây</a>
        </div>
        <div class="list-career">
            @foreach (var item in Model.Careers)
            {
                <a href="@Url.Action("JobCategory" , new {url = item.Code})" class="card card-career border-0">
                    <div class="thuml-img">
                        @if (item.Image != null)
                        {
                            <img src="~/Content/images/base64.gif" data-src="@Path.Combine("/images/careers/", item.Image)" alt="@item.Name" class="lazyload" />
                        }
                    </div>
                    <div class="card-body text-center">
                        <div class="career-name">
                           @item.Name
                        </div>
                        <div class="career-quantity">
                           @item.Posts.Count() việc làm
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
<section class="bg-light py-4">
    <div class="container">
        <h2 class="title">
            Chương trình hỗ trợ ứng viên - Học bổng du học
        </h2>
        <div class="list-support">
            @for (var i = 0; i < 6; i++)
            {
                <div class="card support">
                    <a href="" class="thuml">
                        <img src="~/Content/images/duhoc.jpg" alt="Alternate Text" class="lazyload" />
                        <div class="parter-i">
                            <i class="fas fa-shield-check mr-1"></i>  Đối tác
                        </div>
                    </a>
                    <div class="card-body p-3">
                        <a href="#" class="support-name">Học bổng trao đổi sinh viên toàn cầu ( Global Ugrad) 2024 - 2025 tàu trợ toàn phần Học bổng trao đổi sinh viên toàn cầu ( Global Ugrad) 2024 - 2025 tàu trợ toàn phần</a>
                        <ul class="body-support ul-reset">
                            <li>
                                <i class="fa-sharp fa-solid fa-location-dot"></i>
                                <span>Học bổng du học Mỹ Học bổng du học Mỹ</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-graduation-cap"></i>
                                <span>Thạc sĩ</span>
                            </li>
                            <li>
                                <i class="fas fa-briefcase"></i>
                                <span>Khoa học cơ bản</span>
                            </li>
                            <li>
                                <i class="fa-solid fa-calendar-days"></i>
                                <span>13/10/2023</span>
                            </li>
                            <li>
                                <i class="fal fa-chart-line"></i>
                                <span>144 views</span>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
        <h2 class="title mt-5">
            Top công ty hàng đầu
        </h2>
        <div class="list-support arrows-cusotm">
            @for (var i = 0; i < 6; i++)
            {
                <div class="card career-top">
                    <a href="" class="thuml">
                        <img src="~/Content/images/duhoc.jpg" alt="Alternate Text" class="lazyload" />
                        <div class="tag-i">
                            TOP 10
                        </div>
                    </a>
                    <div class="card-body p-3">
                        <a href="#" class="career-top-name">công ty CP vật tư thiết bị công trình minh đức công ty CP vật tư thiết bị công trình minh đức</a>
                        <div class="box-rating" style="gap:10px;">
                            <div class="rating">
                                <i class="fas fa-star active"></i>
                                <i class="fas fa-star active"></i>
                                <i class="fas fa-star active"></i>
                                <i class="fas fa-star active"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            / 322 Phản hồi
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
@section scripts{
    <script>
        HomeJs()
       
    </script>
}