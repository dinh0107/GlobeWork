@model GlobeWork.Models.Contact
@using GlobeWork.Models
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    ViewBag.Title = "Liên hệ";
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("Contact");
}
<div class="container">
    <div class="row mb-3 mt-4">
        <div class="col-lg-5">
            <form id="form-contact">
                @Html.AntiForgeryToken()
                <div class="title title-model mb-3">
                    Nhập thông tin liên hệ
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.FullName, new { @class = "font-weight-bold" })
                    @Html.TextBoxFor(a => a.FullName, new { @class = "form-control", @placeholder = "Họ và tên" })
                    @Html.ValidationMessageFor(a => a.FullName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Email, new { @class = "font-weight-bold" })
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", @placeholder = "Nhập Email" })
                    @Html.ValidationMessageFor(a => a.Email)
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Mobile, new { @class = "font-weight-bold" })
                    @Html.TextBoxFor(a => a.Mobile, new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
                    @Html.ValidationMessageFor(a => a.Mobile)
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.Body, new { @class = "font-weight-bold" })
                    @Html.TextAreaFor(a => a.Body, new { @class = "form-control", @placeholder = "Nhập nội dung", rows = "5" })
                </div>
                <button type="submit" class="btn btn-block">
                    Gửi ngay
                </button>
            </form>
        </div>
        <div class="col-lg-7">
            <div class="title title-model mb-3 text-left">
                HÃY ĐỂ CHÚNG TÔI ĐƯỢC
                <br />
                ĐỒNG HÀNH CÙNG QUÝ KHÁCH
            </div>
            <div class="content-detail">
                @Html.Raw(config.AboutContact)
            </div>
            @if (config.GoogleMap != null)
            {
                <div class="embed-responsive embed-responsive-21by9 mt-4">
                    @Html.Raw(config.GoogleMap)
                </div>
            }
        </div>
    </div>
</div>