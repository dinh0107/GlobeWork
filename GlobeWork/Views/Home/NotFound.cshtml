@using GlobeWork.Models
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Status - @config.Title</title>
    @if (config.Favicon != null)
    {
        <link rel="shortcut icon" href="@Path.Combine("/images/configs/", config.Favicon)?w=100&h=100">
    }
    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;700;800&display=swap" rel="stylesheet">
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/accessdenied.css" rel="stylesheet" />
</head>
<body>
    <div id="notfound">
        <div class="notfound-bg"></div>
        <div class="notfound">
            <div class="notfound-404">
                <h1>@ViewBag.Status</h1>
            </div>
            <h2>@ViewBag.Content</h2>
            <a href="/" class="home-btn">Trang chủ</a>
            <a href="mailto:@(config.Email)" class="contact-btn"><i class="fa-solid fa-envelope" style="margin-right: 10px;"></i>Liên hệ</a>
            <div class="notfound-social">
                <a href="@config.Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="@config.Twitter"><i class="fa-brands fa-twitter"></i></a>
                <a href="@config.Instagram"><i class="fa-brands fa-instagram"></i></a>
                <a href="@config.Youtube"><i class="fa-brands fa-youtube"></i></a>
            </div>
        </div>
    </div>
</body>
</html>
