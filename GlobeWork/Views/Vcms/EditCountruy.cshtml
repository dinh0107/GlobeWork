@model GlobeWork.Models.Country
@{
    ViewBag.Title = "Chi tiết đất nước";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .form_name {
        width: 200px;
    }
</style>
<h2>Cập nhật quốc gia</h2>
<div class="box_content mt-0">
    @using (Html.BeginForm("EditCountruy", "Vcms", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(a => a.Id)
        <div class="row">
            <div class="col-lg-8">
                <table class="form_table">
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Name)</td>
                        <td class="form_text">@Html.EditorFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Sort)</td>
                        <td class="form_text">@Html.EditorFor(model => model.Sort)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.Image)</td>
                        <td class="form_text">
                            @Html.TextBoxFor(a => Model.Image, new { type = "file" })
                            <span class="red-warring">
                                Chấp nhận ảnh jpg, png, gif, jpeg < 4MB
                            </span>
                        </td>
                    </tr>
                    @if (Model.Image != null)
                    {
                        <tr id="ImgPreview">
                            <td class="form_name"></td>
                            <td class="form_text">
                                <img class="img-border mb-2" src="@Path.Combine("/images/country/", Model.Image)" />
                            </td>
                            <input type="hidden" name="CurrentFile" id="CurrentFile" value="@Model.Image" />
                        </tr>
                    }
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.School)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.School)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Job)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.Job)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Filter)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.Filter)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Hot)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.Hot)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Footer)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.Footer)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.FilterJob)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.FilterJob)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.FilterStudy)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.FilterStudy)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Scholarship)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.Scholarship)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Active)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.Active, new { @checked = "checked" }) Có/Không</td>
                    </tr>
                    <tr>
                        <td class="form_name"></td>
                        <td class="form_text">
                            <input type="submit" value="Thêm mới" class="btn quick-link" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
</div>
