@model GlobeWork.ViewModel.InsertStudyAbroadCategoryViewModel
@{
    ViewBag.Title = "Thêm danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Thêm danh mục</h2>
@if (ViewBag.ArticleCat == "success")
{
    <div id="AlertBox" class="alert alert-success"><strong>Thêm mới danh mục thành công</strong></div>
}
@if (ViewBag.ArticleCat == "update")
{
    <div id="AlertBox" class="alert alert-success"><strong>Cập nhật danh mục thành công</strong></div>
}
<a class="btn quick-link" id="create-cat" href="#list-cat"><i class="far fa-list mr-1"></i> Danh sách danh mục</a>
<div class="box_content">
    <div class="row">
        <div class="col-sm-12 col-lg-12">
            @using (Html.BeginForm("StudyAbroadCategory", "Vcms", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
            <table class="form_table form-table-cat">
                <tr>
                    <td class="form_name">@Html.LabelFor(model => model.StudyAbroadCategory.CountryId)</td>
                    <td class="form_text">
                        <select name="CounId" class="form_control w300" required="">
                            @foreach (var category in Model.Countries)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="form_name">@Html.LabelFor(a => Model.StudyAbroadCategory.ParentId)</td>
                    <td class="form_text">@Html.DropDownListFor(a => Model.StudyAbroadCategory.ParentId, (SelectList)ViewBag.RootCats, "Danh mục cha", new { @class = "form_control w300" })</td>
                </tr>
                <tr>
                    <td class="form_name">@Html.LabelFor(a => Model.StudyAbroadCategory.CategoryName)</td>
                    <td class="form_text">@Html.EditorFor(a => Model.StudyAbroadCategory.CategoryName)</td>
                </tr>
                <tr>
                    <td class="form_name">@Html.LabelFor(a => Model.StudyAbroadCategory.Image)</td>
                    <td class="form_text">
                        @Html.TextBoxFor(a => Model.StudyAbroadCategory.Image, new { type = "file" })
                        <span class="red-warring">
                            Chấp nhận ảnh jpg, png, gif, jpeg < 4MB
                        </span>
                    </td>
                </tr>
                <tr>
                    <td class="form_name">@Html.LabelFor(a => Model.StudyAbroadCategory.Banner)</td>
                    <td class="form_text">
                        @Html.TextBoxFor(a => Model.StudyAbroadCategory.Banner, new { type = "file" })
                        <span class="red-warring">
                            Chấp nhận ảnh jpg, png, gif, jpeg < 4MB
                        </span>
                    </td>
                </tr>
                <tr>
                    <td class="form_name">@Html.LabelFor(a => Model.StudyAbroadCategory.Sort)</td>
                    <td class="form_text">@Html.EditorFor(a => Model.StudyAbroadCategory.Sort)</td>
                </tr>
                <tr>
                    <td class="form_name">@Html.LabelFor(a => Model.StudyAbroadCategory.ShowMenu)</td>
                    <td class="form_text">@Html.EditorFor(a => Model.StudyAbroadCategory.ShowMenu)</td>
                </tr>
                <tr>
                    <td class="form_name">@Html.LabelFor(a => Model.StudyAbroadCategory.Active)</td>
                    <td class="form_text">@Html.CheckBoxFor(a => Model.StudyAbroadCategory.Active, new { @checked = "checked" })</td>
                </tr>
                <tr>
                    <td class="form_name">@Html.LabelFor(a => Model.StudyAbroadCategory.Url)</td>
                    <td class="form_text">@Html.EditorFor(a => Model.StudyAbroadCategory.Url)</td>
                </tr>
                <tr>
                    @*<tr>
                <td class="form_name">@Html.LabelFor(a => Model.TitleMeta)</td>
                <td class="form_text">@Html.EditorFor(a => Model.TitleMeta)</td>
            </tr>
            <tr>
                <td class="form_name">@Html.LabelFor(a => Model.DescriptionMeta)</td>
                <td class="form_text">@Html.EditorFor(a => Model.DescriptionMeta)</td>
            </tr>*@
                <tr>
                    <td class="form_name"></td>
                    <td class="form_text">
                        <input type="submit" class="btn quick-link" value="Thêm mới" />
                    </td>
                </tr>
            </table>
            }
        </div>
        <div class="col-sm-12 col-lg-12">
            @Html.Action("ListCat", "Vcms")
        </div>
    </div>
</div>